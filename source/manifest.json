{
        "name": "Virus Link Scanner",
        "version": "0.1",
        "manifest_version": 2,
        "description": "A link scanner. Detect viruses before saving onto your computer.",
        "icons": {
                "16": "icon_small.png",
                "128": "icon_big.png"
        },
        
        "browser_action": {
      		"default_title": "Link Scanner",
      		"default_icon":"icon_big.png",
      		"default_popup": "popup.html"
  	},
        "background": {
                "persistent": false,
                "matches": ["http://*/*", "https://*/*"],
                "scripts": ["sha256.js", "Blob.js", "FileSaver.js", "background.js"]
        },
        "permissions": ["contextMenus", "downloads", "downloads.open", "http://*/", "https://*/","tabs"]
}
